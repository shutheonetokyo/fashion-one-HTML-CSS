        <%= link_to "渋谷", root_path, class: 'btn  btn-outline-secondary btn-lg m-3'%>
        <%= link_to "原宿", root_path, class: 'btn  btn-outline-secondary btn-lg m-3'%>
        <%= link_to "表参道", root_path, class: 'btn  btn-outline-secondary btn-lg m-3'%>
        <%= link_to "代官山", root_path, class: 'btn  btn-outline-secondary btn-lg m-3'%>
        <%= link_to "中目黒", root_path, class: 'btn  btn-outline-secondary btn-lg m-3'%>
        <%= link_to "新宿", root_path, class: 'btn  btn-outline-secondary btn-lg m-3'%>
        <%= link_to "代々木", root_path, class: 'btn  btn-outline-secondary btn-lg m-3'%>
        <%= link_to "中野", root_path, class: 'btn  btn-outline-secondary btn-lg m-3'%>
        <%= link_to "高円寺", root_path, class: 'btn  btn-outline-secondary btn-lg m-3'%>
        <%= link_to "吉祥寺", root_path, class: 'btn  btn-outline-secondary btn-lg m-3'%>
        <%= link_to "池袋", root_path, class: 'btn  btn-outline-secondary btn-lg m-3'%>
        <%= link_to "六本木", root_path, class: 'btn  btn-outline-secondary btn-lg m-3'%>
        <%= link_to "有楽町", root_path, class: 'btn  btn-outline-secondary btn-lg m-3'%>
        <%= link_to "銀座", root_path, class: 'btn  btn-outline-secondary btn-lg m-3'%>
        <%= link_to "東京", root_path, class: 'btn  btn-outline-secondary btn-lg m-3'%>
        <%= link_to "錦糸町", root_path, class: 'btn  btn-outline-secondary btn-lg m-3'%>
      </p>
    </div>
  </div>
</div>






